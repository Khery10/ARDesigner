<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.example.android.ardesigner.basic.views.loading.PermissionsFragment"
        android:label="Permissions" >

        <action
            android:id="@+id/action_permissions_to_loading"
            app:destination="@id/loadingFragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loadingFragment"
        android:name="com.example.android.ardesigner.basic.views.loading.LoadingFragment">

        <action
            android:id="@+id/action_loading_to_menuFragment"
            app:destination="@id/menuFragment" />

    </fragment>


    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.android.ardesigner.basic.views.menu.MenuFragment" />

</navigation>